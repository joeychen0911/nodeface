<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no"
  />
  <title>
    <%= title %>
  </title>

  <link rel="stylesheet" type="text/css" href="/stylesheets/bootstrap.min.css" />
  <link rel="stylesheet" type="text/css" href="/stylesheets/global.css" />
  <link rel="stylesheet" type="text/css" href="/stylesheets/main.css" />
  <!--link rel="stylesheet" type="text/css" href="/stylesheets/signin.css" /-->
</head>

<body>

  <input id="uploadInput" class="invisible" type="file" accept="image/png, image/jpeg" />
  <div id="wrapperOuter" class="wrapper-outer">
    <div id="indexSection" class="wrapper-inner index-section">
      <img class="index-bg" src="/images/index.png" />
      <img class="choose-btn" src="/images/upload.png" />
      <div class="holder"></div>
    </div>
    <div id="cropSection" class="wrapper-inner crop-section" style="display:none;">
      <div id="cropLayer" class="crop-layer">
        <canvas id="cropCanvas" width="330" height="440"></canvas>
        <img id="cropImg" style="display:none;" />
        <div class="background">&nbsp;</div>
      </div>
      <div id="cropMaskUp" class="crop-mask" style="visibility:hidden;">&nbsp;</div>
      <div id="cropMaskDown" class="crop-mask" style="visibility:hidden;">&nbsp;</div>
      <div id="cropBar" class="crop-bar">
        <div class="cancel-btn">取消</div>
        <div class="confirm-btn">使用</div>
      </div>
    </div>
    <div id="middleSection" class="wrapper-inner middle-section" style="display:none;">
      <img class="middle-bg" src="/images/middle.png" />
      <img class="user-photo" src="" />
      <img class="detect-btn" src="/images/detect-btn.png">
      <div class="holder"></div>
    </div>
    <div id="resultSection" class="wrapper-inner result-section" style="display:none;">
      <div id="resultTitle" class="result-title"></div>
      <img class="result-bg" src="/images/result-bg.png" />
      <img class="photo-result" />
      <div id="resultContent" class="result-content"></div>
      <img class="retry-btn" src="/images/retry-btn.png" />
      <div class="holder"></div>
    </div>
  </div>

  <div class="place-holder"></div>
</body>

</html>

<script src="/javascripts/jquery-3.1.0.min.js" type="text/javascript"></script>
<script src="/javascripts/main.js" type="text/javascript"></script>
<script src="/javascripts/ext-1.0.1.min.js" type="text/javascript"></script>
<script src="/javascripts/zepto.min.js" type="text/javascript"></script>

<script type="text/javascript">
  var cropGesture = null;
  var fileType = null;
$("#indexSection .choose-btn").on("click", startUpload);
$("#resultSection .retry-btn").on("click", function(){
        window.location.href = "/";
    });

function startUpload(){
  var $upload = $("#uploadInput");
  $upload.unbind("change");
  $upload.one("change", fileChanged);
  $upload.trigger("click");
}

</script>